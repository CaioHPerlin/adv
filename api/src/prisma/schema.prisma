generator client {
  provider     = "prisma-client"
  output       = "./generated"
  moduleFormat = "cjs"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cases Case[]
}

model Case {
  id               Int      @id @default(autoincrement())
  number           String   @unique
  court            String
  clientName       String
  distributionDate DateTime @default(now())
  description      String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  responsibleUserId Int
  responsibleUser   User @relation(fields: [responsibleUserId], references: [id])
}
